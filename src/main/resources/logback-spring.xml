        </rollingPolicy>
    </appender>-->


    <!-- Logging at INFO level -->
    <root level="info">
        <appender-ref ref="ConsoleOutput" />
    </root>

    <!-- Logging at TRACE level -->
    <logger name="com.log" level="trace" additivity="false">
        <appender-ref ref="ConsoleOutput" />
    </logger>

</configuration>